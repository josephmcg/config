{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    /* Enable top-level await, and other modern ESM features: */
    "target": "ESNext",
    "module": "ESNext",

    /* Astro specific jazz: */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true
  }
}
