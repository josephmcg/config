{
  "name": "@josephmcg/config",
  "private": true,
  "license": "MIT",
  "packageManager": "pnpm@10.6.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/josephmcg/config.git"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "\n============= Setup ==============": "",
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "\n============== Dev ===============": "",
    "dev": "turbo run dev",
    "\n=========== Lint/Test ============": "",
    "lint": "turbo run lint",
    "check-exports": "turbo run check-exports",
    "\n============= Build ==============": "",
    "build": "turbo run build",
    "\n============= Publish ==============": "",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@changesets/cli": "^2.27.9",
    "@types/eslint": "8.56.11",
    "husky": "^9.1.6",
    "tsup": "^8.3.5",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "updateConfig": {
      "ignoreDependencies": [
        "eslint",
        "eslint-plugin-unused-imports",
        "@types/eslint"
      ]
    }
  }
}
